{
  "compilerOptions": {
    "baseUrl": "app",
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
		"jsxFactory": "React.createElement",
    "jsx": "react" ,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "noEmit": false,
    "checkJs": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~*": ["./*"]
    },
    "lib": [
      "DOM",
      "ESNext"
    ],
    "types": [
      "vite/client",
			"./types/global",
      "./types/window"
    ]
  },
  "exclude": [
    "node_modules",
    "/**/*/__ava__",
    "/**/*/__mocks__",
    "/**/*/__tests__"
  ]
}